<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caculator"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/textView"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_marginTop="60dp"
        android:gravity="right"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/mc"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:text="MC"
        android:textSize="20dp"
        android:layout_alignTop="@+id/editText"
        android:layout_marginTop="70dp" />
    <Button
        android:id="@+id/mr"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:text="MR"
        android:textSize="20dp"
        android:layout_alignTop="@+id/editText"
        android:layout_alignLeft="@+id/mc"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="80dp"/>
    <Button
        android:id="@+id/m1"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:text="M+"
        android:textSize="20dp"
        android:layout_alignTop="@+id/editText"
        android:layout_alignLeft="@+id/mr"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/m2"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:text="M-"
        android:textSize="20dp"
        android:layout_alignTop="@+id/editText"
        android:layout_alignLeft="@+id/m1"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="80dp"/>
    <Button
        android:id="@+id/ms"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:text="MS"
        android:textSize="20dp"
        android:layout_alignTop="@+id/editText"
        android:layout_alignLeft="@+id/m2"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/percent"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="%"
        android:textSize="20dp"
        android:layout_alignTop="@+id/mc"
        android:layout_marginTop="70dp" />
    <Button
        android:id="@+id/ce"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="CE"
        android:textSize="20dp"
        android:layout_alignTop="@+id/mc"
        android:layout_marginTop="70dp"
        android:layout_alignLeft="@+id/percent"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/c"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="C"
        android:textSize="20dp"
        android:layout_alignTop="@+id/mc"
        android:layout_marginTop="70dp"
        android:layout_alignLeft="@+id/ce"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/del"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="DEL"
        android:textSize="20dp"
        android:layout_alignTop="@+id/mc"
        android:layout_marginTop="70dp"
        android:layout_alignLeft="@+id/c"
        android:layout_marginLeft="100dp"/>

    <Button
        android:id="@+id/fraction"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="1/x"
        android:textSize="20dp"
        android:layout_alignTop="@+id/percent"
        android:layout_marginTop="80dp" />
    <Button
        android:id="@+id/pow2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="X^2"
        android:textSize="20dp"
        android:layout_alignTop="@+id/percent"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/fraction"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/root2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="X^1/2"
        android:textSize="20dp"
        android:layout_alignTop="@+id/percent"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/pow2"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/div"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="/"
        android:textSize="20dp"
        android:layout_alignTop="@+id/percent"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/root2"
        android:layout_marginLeft="100dp"/>


    <Button
        android:id="@+id/num7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="20dp"
        android:layout_alignTop="@+id/fraction"
        android:layout_marginTop="80dp" />
    <Button
        android:id="@+id/num8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="20dp"
        android:layout_alignTop="@+id/fraction"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/num7"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/num9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="20dp"
        android:layout_alignTop="@+id/fraction"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/num8"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/multiply"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="*"
        android:textSize="20dp"
        android:layout_alignTop="@+id/fraction"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/num9"
        android:layout_marginLeft="100dp"/>

    <Button
        android:id="@+id/num4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="20dp"
        android:layout_alignTop="@+id/num7"
        android:layout_marginTop="80dp" />
    <Button
        android:id="@+id/num5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="5"
        android:textSize="20dp"
        android:layout_alignTop="@+id/num7"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/num4"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/num6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="20dp"
        android:layout_alignTop="@+id/num7"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/num5"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/minus"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="-"
        android:textSize="20dp"
        android:layout_alignTop="@+id/num7"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/num6"
        android:layout_marginLeft="100dp"/>

    <Button
        android:id="@+id/num1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="20dp"
        android:layout_alignTop="@+id/num4"
        android:layout_marginTop="80dp" />
    <Button
        android:id="@+id/num2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="20dp"
        android:layout_alignTop="@+id/num4"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/num1"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/num3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="20dp"
        android:layout_alignTop="@+id/num4"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/num2"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/plus"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="+"
        android:textSize="20dp"
        android:layout_alignTop="@+id/num4"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/num3"
        android:layout_marginLeft="100dp"/>

    <Button
        android:id="@+id/dop"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="+/-"
        android:textSize="20dp"
        android:layout_alignTop="@+id/num1"
        android:layout_marginTop="80dp" />
    <Button
        android:id="@+id/num0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="20dp"
        android:layout_alignTop="@+id/num1"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/dop"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/point"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="."
        android:textSize="20dp"
        android:layout_alignTop="@+id/num1"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/num0"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/equal"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="="
        android:textSize="20dp"
        android:layout_alignTop="@+id/num1"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/point"
        android:layout_marginLeft="100dp"/>

</RelativeLayout>